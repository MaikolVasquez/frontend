.header-container
    margin 5px
    grid-column 1/3
    padding 20px 5px 5px 20px
    background-color #E0F4FF
    display grid
    color #47525E
    font-size 25px
    
    grid-template-rows repeat(4,1fr)
    grid-template-columns repeat(7,1fr)

.header-container img
    grid-column 1/2
    grid-row 1/9
.header-container h2
    grid-column 2/9

.header-container p
    font-family "Segoe UI"


.job-titile-header
    grid-row 2/3
    grid-column 2/5
.phone-header
    grid-row 3/4
.email-header
    grid-row 2/3
    grid-column 4/6
.website-header
    grid-row 3/4
    grid-column 4/6
.adress-header
    grid-row 4/5
    